<!DOCTYPE html>
<html>
<head>
  <title>RaidBoss</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>

  <%= stylesheet_link_tag    'https://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css' %>
  <%= stylesheet_link_tag    'https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css' %>

  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="wrapper">
    <header class="main-header">
      <nav class="navbar navbar-static-top" role="navigation">
        <a href="" class="logo">
          <!-- mini logo for sidebar mini 50x50 pixels -->
          <span class="logo-mini"><b>A</b>LT</span>
          <!-- logo for regular state and mobile devices -->
          <span class="logo-lg"><b>Raid</b>Boss</span>
        </a>
        <div class="navbar-custom-menu" style="margin-right: 230px">
          <ul class="nav navbar-nav">
            <li>
              <a href="">Sign Up</a>
            </li>
            <li>
              <a href="">Sign In</a>
            </li>
          </ul>
        </div>
      </nav>
    </header>
    <div class="content-wrapper" style="margin-left: 0px"></div>
    <footer class="main-footer" style="margin-left: 0px">

      <!-- Default to the left -->
      <strong>Copyright &copy; 2015 <a href="#"><%= t "company" %></a>.</strong> All rights reserved.
      <div class="pull-right">
        <p>
        <%= link_to_unless I18n.locale == :en, "English", locale: :en %>
        |
        <%= link_to_unless I18n.locale == :pt, "PortuguÃªs", locale: :pt %>
        </p>
      </div>
    </footer>
  </div>

  <!-- REQUIRED JS SCRIPTS -->

  <!-- jQuery 2.1.4 -->
  <script src="plugins/jQuery/jQuery-2.1.4.min.js"></script>
  <!-- Bootstrap 3.3.2 JS -->
  <script src="bootstrap/js/bootstrap.min.js" type="text/javascript"></script>
  <!-- AdminLTE App -->
  <script src="dist/js/app.min.js" type="text/javascript"></script>

  <!-- Optionally, you can add Slimscroll and FastClick plugins.
        Both of these plugins are recommended to enhance the
        user experience. Slimscroll is required when using the
        fixed layout. -->
</body>
</html>
